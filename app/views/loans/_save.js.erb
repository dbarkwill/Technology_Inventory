$("ul.errors").html("")
<% if @loan.errors.any? %>
  <% @loan.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#loan-index").html("<%= escape_javascript(render 'index') %>")
  $("#loan-modal").modal("hide")
<% end %>